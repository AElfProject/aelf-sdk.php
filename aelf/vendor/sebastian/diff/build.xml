    public function testVector()
    {
        $varint = new VarInt();
        $vector = new Vector(
            $varint,
            function () {
                return;
            }
        );

        $buffer = Buffer::hex('010203040506070809000a0b0c0d0e0f');
        $array = [$buffer, $buffer, $buffer];
        $this->assertEquals('03' . $buffer->getHex() . $buffer->getHex() . $buffer->getHex(), bin2hex($vector->write($array)));
    }

